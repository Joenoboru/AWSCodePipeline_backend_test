{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "GET /notice/list Notice.list input data",
  "properties": {
    "limit": {
      "type": "integer",
      "description": "指定此次搜尋結果的回傳資料筆數"
    },
    "offset": {
      "type": "integer",
      "description": "指定要從第幾筆資料回傳"
    },
    "sort": {
      "type": "string",
      "description": "指定資料排序方式"
    },
    "read": {
      "type": "integer",
      "description": "已讀狀態（0: 未讀, 1: 已讀）"
    }
  },
  "additionalProperties": true
}