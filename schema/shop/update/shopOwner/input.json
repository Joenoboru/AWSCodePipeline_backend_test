{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "PUT /shop/:public_id Shop.update input data",
  "properties": {
    "name": {
      "type": "string",
      "description": "店家名稱"
    },
    "tel": {
      "type": "string",
      "description": "店家聯絡電話"
    },
    "address": {
      "type": "string",
      "description": "店家地址"
    },
    "longitude": {
      "type": "number",
      "description": "店家經度"
    },
    "latitude": {
      "type": "number",
      "description": "店家緯度"
    },
    "email": {
      "type": "string",
      "description": "店家email"
    },
    "category": {
      "type": "integer",
      "description": "店家類型"
    },
    "description": {
      "type": "string",
      "description": "店家敘述"
    },
    "web": {
      "type": "string",
      "description": "店家網站"
    },
    "logo": {
      "type": "string",
      "description": "店家LOGO"
    },
    "contact": {
      "type": "string",
      "description": "聯絡人"
    },
    "contact_phone": {
      "type": "string",
      "description": "聯絡人電話"
    }
  },
  "additionalProperties": false
} 