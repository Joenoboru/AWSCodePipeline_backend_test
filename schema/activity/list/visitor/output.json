{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "GET /activity/list Activity.list output data",
  "properties": {
    "total": {
      "type": "integer",
      "description": "搜尋結果的總數"
    },
    "data": {
      "type": "array",
      "description": "多個活動資料",
      "items": {
        "type": "object",
        "description": "活動資料",
        "properties": {
          "public_id": {
            "type": "string",
            "description": "活動公開編號"
          },
          "name": {
            "type": "string",
            "description": "活動名稱"
          },
          "type_id": {
            "type": "integer",
            "description": "活動類型編號"
          },
          "class": {
            "type": "integer",
            "description": "活動類型分類"
          },
          "start_time": {
            "type": "object",
            "description": "活動開始時間",
            "nullable": true
          },
          "end_time": {
            "type": "object",
            "description": "活動結束時間",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "description": "活動狀態(0: 關閉 1: 開啟）"
          },
          "shop_name": {
            "type": "string",
            "description": "商家名稱"
          },
          "shop_logo": {
            "type": "string",
            "description": "商家logo",
            "nullable": true
          },
          "shop_longitude": {
            "type": "number",
            "description": "商家經度"
          },
          "shop_latitude": {
            "type": "number",
            "description": "商家緯度"
          },
          "picture_url": {
            "type": "string",
            "description": "活動主圖",
            "nullable": true            
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}