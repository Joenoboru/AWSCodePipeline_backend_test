{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "GET /activity/:public_id Activity.find output data",
  "properties": {
    "public_id": {
      "type": "string",
      "description": "活動公開編號"
    },
    "shop_info": {
      "type": "object",
      "description": "店家資訊",
      "properties": {
        "name": {
          "type": "string",
          "description": "商店名稱"
        },
        "category": {
          "type": "integer",
          "description": "店家類型"
        },
        "address": {
          "type": "string",
          "description": "店家地址",
          "nullable": true
        },
        "web": {
          "type": "string",
          "description": "店家網址",
          "nullable": true
        },
        "description": {
          "type": "string",
          "description": "敘述",
          "nullable": true
        },
        "tel": {
          "type": "string",
          "description": "店家聯絡電話",
          "nullable": true
        },
        "logo": {
          "type": "string",
          "description": "店家logo",
          "nullable": true
        },
        "public_id": {
          "type": "string",
          "description": "商店公開編號"
        }
      },
      "additionalProperties": false
    },
    "name": {
      "type": "string",
      "description": "活動名稱"
    },
    "description": {
      "type": "string",
      "description": "活動敘述",
      "nullable": true
    },
    "picture": {
      "type": "array",
      "description": "圖片資訊",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "圖片編號"
          },
          "type": {
            "type": "integer",
            "description": "圖片類型"
          },
          "url": {
            "type": "string",
            "description": "圖片url"
          }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "description": "標籤資訊",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "標籤編號"
          },
          "name": {
            "type": "string",
            "description": "標籤名稱"
          }
        },
        "additionalProperties": false
      }
    },
    "limit": {
      "type": "integer",
      "description": "參加活動次數限制"
    },
    "type_id": {
      "type": "integer",
      "description": "活動類型編號"
    },
    "class": {
      "type": "integer",
      "description": "活動類型分類"
    },
    "start_time": {
      "type": "object",
      "description": "活動開始時間",
      "nullable": true
    },
    "end_time": {
      "type": "object",
      "description": "活動結束時間",
      "nullable": true
    },
    "use_start_time": {
      "type": "object",
      "description": "折扣使用期限(開始)",
      "nullable": true
    },
    "use_end_time": {
      "type": "object",
      "description": "折扣使用期限(結束)",
      "nullable": true
    },
    "use_days": {
      "type": "integer",
      "description": "折扣可使用天數",
      "nullable": true
    },
    "status": {
      "type": "integer",
      "description": "活動狀態(0: 關閉 1: 開啟）"
    },
    "share": {
      "type": "integer",
      "description": "分享次數"
    },
    "play": {
      "type": "integer",
      "description": "遊玩次數"
    },
    "view": {
      "type": "integer",
      "description": "瀏覽次數"
    },
    "isOwnShareDiscount": {
      "type": "boolean",
      "description": "是否有分享優惠"
    },
    "issued_amount": {
      "type": "integer",
      "description": "折扣總發放次數"
    },
    "usage_amount": {
      "type": "integer",
      "description": "折扣總使用次數"
    },
    "created_time": {
      "type": "object",
      "description": "資料新增時間"
    },
    "updated_time": {
      "type": "object",
      "description": "資料更新時間"
    },
    "user_played": {
      "type": "integer",
      "description": "客戶已玩次數"
    },    
    "writeoff_type": {
      "type": "integer",
      "description": "商品卷核銷方式(0: QRcode 1: 快速)",
      "enum": [0, 1]
    }
  },
  "additionalProperties": false
} 
